<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/wifi_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:text="wifi_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/wifi_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_scan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_list" />


    <Button
        android:id="@+id/scan_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_scan" />


    <Button
        android:id="@+id/wifi_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_enable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/wifi_disable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_result" />


    <Button
        android:id="@+id/wifi_disable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_disable"
        app:layout_constraintLeft_toRightOf="@id/wifi_enable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_result" />

    <Button
        android:id="@+id/wifi_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_disable" />


    <Button
        android:id="@+id/wifi_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_remove"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_add" />

    <Button
        android:id="@+id/wifi_enable_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_enable_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/wifi_disable_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_remove" />


    <Button
        android:id="@+id/wifi_disable_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_disable_one"
        app:layout_constraintLeft_toRightOf="@id/wifi_enable_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_remove" />


    <Button
        android:id="@+id/wifi_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_disconnect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_disable_one" />


    <Button
        android:id="@+id/wifi_reconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi_reconnect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_disconnect" />

    <Button
        android:id="@+id/create_hotspot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:text="create_hotspot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stop_hotspot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:text="stop_hotspot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>